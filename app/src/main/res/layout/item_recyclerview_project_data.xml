<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="4dp"
    android:elevation="3dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/BGPrimary">

        <ImageView
            android:id="@+id/item_project_img"
            android:layout_width="80dp"
            android:layout_height="140dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@color/Primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/item_project_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            tools:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:maxLines="2"
            app:layout_constraintStart_toEndOf="@+id/item_project_img"
            app:layout_constraintTop_toTopOf="@+id/item_project_img"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/item_project_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            tools:text="@string/app_name"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:maxLines="3"
            app:layout_constraintStart_toStartOf="@+id/item_project_title"
            app:layout_constraintTop_toBottomOf="@+id/item_project_title"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/item_project_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="OwenLee"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/item_project_title"
            app:layout_constraintBottom_toBottomOf="@id/item_project_img"/>

        <TextView
            android:id="@+id/item_project_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            tools:text="1天前"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/item_project_img"
            app:layout_constraintEnd_toStartOf="@id/item_project_collect"/>

        <ImageView
            android:id="@+id/item_project_collect"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_favorite_border"
            app:layout_constraintBottom_toBottomOf="@id/item_project_img"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
