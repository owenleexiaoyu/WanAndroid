<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:clipChildren="false">
        <com.zhengsr.viewpagerlib.view.BannerViewPager
            android:id="@+id/fhome_banner"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:banner_isloop="true"
            app:banner_looptime="3000"/>
        <com.zhengsr.viewpagerlib.indicator.ZoomIndicator
            android:id="@+id/fhome_zoom_indicator"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            app:zoom_alpha_min="0.5"
            app:zoom_leftmargin="10dp"
            app:zoom_max="1.5"></com.zhengsr.viewpagerlib.indicator.ZoomIndicator>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fhome_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>