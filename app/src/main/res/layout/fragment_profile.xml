<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="48dp"-->
<!--            android:background="@color/BGSecondary"-->
<!--            android:elevation="2dp"-->
<!--            android:text="@string/mine"-->
<!--            android:textColor="@color/TextPrimary"-->
<!--            android:textSize="16sp"-->
<!--            android:gravity="center"/>-->

        <RelativeLayout
            android:background="@drawable/ripple_item_select"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:elevation="1dp">

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_avatar_black_96dp"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_login"
                android:layout_toEndOf="@id/profile_icon"
                android:layout_marginStart="16dp"
                android:layout_centerVertical="true"
                android:visibility="gone"
                tools:text="登陆/注册"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/profile_icon"
                android:layout_marginStart="16dp"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UserName"
                    android:textSize="14sp"
                    android:textColor="@color/TextPrimary"/>
                <TextView
                    android:id="@+id/user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_name"
                    android:layout_marginTop="2dp"
                    android:text="ID: 111"
                    android:textSize="12sp"
                    android:textColor="@color/TextSecondary"/>
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_chevron_right_black_24dp"
                app:tint="@color/TextSecondary" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="1dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/white">

            <cc.lixiaoyu.amz_uikit.item.AMZItemView
                android:id="@+id/my_integral"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:start_text="我的积分"
                app:start_icon="@drawable/ic_my_integral"
                android:background="@drawable/ripple_item_select" />

            <cc.lixiaoyu.amz_uikit.item.AMZItemView
                android:id="@+id/integral_rate"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:start_text="积分排行"
                app:start_icon="@drawable/ic_graphic_eq_black_24dp"
                android:background="@drawable/ripple_item_select"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="1dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/white">

            <cc.lixiaoyu.amz_uikit.item.AMZItemView
                android:id="@+id/my_posts"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:start_text="我的分享"
                app:start_icon="@drawable/ic_add_circle_outline_black_24dp"
                android:background="@drawable/ripple_item_select" />

            <cc.lixiaoyu.amz_uikit.item.AMZItemView
                android:id="@+id/my_collections"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:start_text="我的收藏"
                app:start_icon="@drawable/ic_star_border_black_24dp"
                android:background="@drawable/ripple_item_select"/>

            <cc.lixiaoyu.amz_uikit.item.AMZItemView
                android:id="@+id/my_histories"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:start_text="浏览历史"
                app:start_icon="@drawable/ic_history_black_24dp"
                android:background="@drawable/ripple_item_select"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="1dp"
            android:layout_marginTop="8dp">

            <cc.lixiaoyu.amz_uikit.item.AMZItemView
                android:id="@+id/opensource_license"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:start_text="开源许可"
                app:start_icon="@drawable/ic_github"
                android:background="@drawable/ripple_item_select" />

            <cc.lixiaoyu.amz_uikit.item.AMZItemView
                android:id="@+id/about_author"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:start_text="关于作者"
                app:start_icon="@drawable/ic_info_black_24dp"
                android:background="@drawable/ripple_item_select"/>

            <cc.lixiaoyu.amz_uikit.item.AMZItemView
                android:id="@+id/app_settings"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:start_text="系统设置"
                app:start_icon="@drawable/ic_settings_black_24dp"
                android:background="@drawable/ripple_item_select"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
