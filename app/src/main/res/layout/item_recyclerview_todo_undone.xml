<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/BGPrimary">
    <TextView
        android:id="@+id/item_undone_tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="2019-05-08"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/Primary"
        android:background="@color/Secondary"
        tools:ignore="RtlSymmetry" />
    <View
        android:id="@+id/item_undone_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/LinePrimary"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <Button
            android:id="@+id/item_undone_btn_finish"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_check_circle_outline"
            android:backgroundTint="@color/TextSecondary"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/item_undone_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/app_name"
            android:textColor="@color/TextPrimary"
            android:layout_toEndOf="@id/item_undone_btn_finish"
            android:layout_marginStart="10dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/item_undone_tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/app_name"
            android:textColor="@color/TextSecondary"
            android:layout_below="@id/item_undone_tv_title"
            android:layout_alignStart="@id/item_undone_tv_title"
            android:layout_marginTop="2dp"/>
        <Button
            android:id="@+id/item_undone_btn_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_delete"
            android:backgroundTint="@color/TextSecondary"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/LinePrimary"/>
</LinearLayout>